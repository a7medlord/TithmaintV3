@model IEnumerable<CloudApp.Models.ManpulateModel.FinCloseModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}



<div class="row">
    <div class="col-lg-12">
        <h2> تقرير المعاملات  </h2>
        <div class="row">
            

            <div class="col-md-4">
                <label class="control-label">العميل</label>
                <select id="cms" asp-items="ViewBag.CustmerId" class="select2 form-control" >  </select>
            </div>
            
            
            <div class="col-md-4">
                <label class="control-label">من</label>
                <div id="date-popup" class="input-group date">
                    <input id="date1" type="text" data-format="D, dd MM yyyy" class="form-control">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                </div>
            </div>
            <div class="col-md-4">
                <label class="control-label">الي</label>

                <div id="date-popup1" class="input-group date">
                    <input id="date2" type="text" data-format="D, dd MM yyyy" class="form-control">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                </div>
            </div>
        </div>
            <div class="row">
                 
                <div class="col-md-4">
                    <label class="control-label">نوع العقار </label>
                    <select id="aqartype" class="select2 form-control" asp-items="ViewBag.aqartype"></select>
                </div>
            
                <div class="col-md-4">
                    <label class="control-label"> المدينة </label>
                    <select id="city" class="select2 form-control" asp-items="ViewBag.City"></select>
                </div>
            
            
                <div class="col-md-4">
                    <label class="control-label"> الحي </label>
                    <select id="gada" class="select2 form-control" asp-items="ViewBag.Gada"></select>
                </div>

            </div>

           
        
            
          

      
            
            
        <div class="row">

            <div class="col-md-8">
                <br/>
                <a id="btn_filter" class="btn btn-primary">
                    فــرز
                </a>
               

            </div>

        </div>

    </div>
</div>
<br/>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading clearfix">
                <h3 class="panel-title"></h3>
                <ul class="panel-tool-options"> 
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">
         
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Custmer)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Scustmer)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Bank)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Owner)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Tbuild)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Place)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                        

                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Custmer)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Scustmer)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Bank)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Owner)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tbuild)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Place)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                
                    
                            </tr>
                        }
                        </tbody>
          
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



    

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }

    <script>
        var cms, d1, d2, t, city, gada;

        $(document).ready(function(){
 
            cms = localStorage.getItem("cmsid");
            d1 = localStorage.getItem("date1");
            d2 = localStorage.getItem("date2");
            t = localStorage.getItem("aqartype");
            city = localStorage.getItem("city");
            gada = localStorage.getItem("gada");
            $("#cms").val(cms).trigger('change');
            $("#city").val(city).trigger('change');
            $("#gada").val(gada).trigger('change');
            $("#aqartype").val(t).trigger('change');


            $("#date1").val(d1);
            $("#date2").val(d2);
   

        });

       
        $("#btn_filter").click(function() {

            localStorage.setItem("cmsid", $("#cms").val()); 
            localStorage.setItem("date1", $("#date1").val()); 
            localStorage.setItem("date2", $("#date2").val()); 
            localStorage.setItem("aqartype", $("#aqartype").val()); 
            localStorage.setItem("city", $("#city").val()); 
            localStorage.setItem("gada", $("#gada").val()); 

            location.href = "/FinModels/FinFilter?date1=" + $("#date1").val() + "&date2=" + $("#date2").val() + "&cms=" + $("#cms").val() + "&aqartype=" + $("#aqartype").val() + "&city=" + $("#city").val() + "&gada=" + $("#gada").val();
        });


      






    </script>
}

